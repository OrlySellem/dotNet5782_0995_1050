<Page x:Class="PL.ParcelsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:Height="640" Width="800"
      Title="ParcelsListPage">
    <Page.Resources>
        <Style TargetType="Button" x:Key="roundButton">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="White" BorderThickness="0,1,1,0" >
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="133.333"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions >

        <ListView x:Name="ParcelListView"  Background="#FFEBEBEB"  Grid.Row="1" Grid.ColumnSpan="6" SelectionChanged="ParcelListView_SelectionChanged" Margin="0,46,0,0" Grid.RowSpan="9">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="תז " Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Senderld}" Header="תז שולח" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Targetld}" Header="תז מקבל" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Weight}" Header="משקל" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Priority}" Header="עדיפות" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding ParcelStatus}" Header="סטטוס חבילה" Width="auto"/>
                </GridView>
            </ListView.View>

        </ListView>
        <Button Style="{DynamicResource roundButton}" x:Name="addParcelToList" Content="הוסף חבילה" Grid.Column="5" HorizontalAlignment="Left" Margin="20,1,0,0" VerticalAlignment="Top" Height="33" Width="102" Click="AddParcelToList_Click" FontSize="16" FontFamily="Heebo" Grid.Row="1"/>
        <CheckBox x:Name="senderCheckBox" Content="sender" Grid.Column="1" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Height="23" Checked="senderCheckBox_check"/>
        <CheckBox x:Name="targetCheckBox" Content="target" Grid.Column="2" HorizontalAlignment="Left" Margin="8,45,0,0" VerticalAlignment="Top" Height="23" Checked="TargetCheckBox_check"/>
        <ComboBox x:Name="senderOrTargetID" IsEnabled="False" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Margin="38,11,0,0" Grid.Row="1" VerticalAlignment="Top" Width="161" SelectionChanged="SenderOrTargetID_SelectionChanged"/>
        <Button Style="{DynamicResource roundButton}" x:Name="groupingSender"  Content="קבץ לפי שולח" HorizontalAlignment="Left" Margin="114,11,0,0" VerticalAlignment="Top" Height="26" Width="113" Click="groupingSender_Click" FontFamily="Heebo" FontSize="16" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Button Style="{DynamicResource roundButton}" x:Name="groupingTarget"  Content="קבץ לפי מקבל" HorizontalAlignment="Left" Margin="111,11,0,0" VerticalAlignment="Top" Height="26" Width="134" Click="groupingTarget_Click" FontFamily="Heebo" FontSize="16" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
