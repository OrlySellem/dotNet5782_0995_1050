<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL" d:DataContext="{d:DesignInstance Type=local:DroneWindow}"
        mc:Ignorable="d"
        Title="DroneWindow" Height="400" Width="500"
        WindowStyle="None" MouseDown="moveWindow">
    <Window.Resources>
        <Style TargetType="Button" x:Key="roundButton">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FFCCF617" BorderBrush="#ccc" BorderThickness="0,1,1,0" >
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="roundButtonUpdate">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="#FF185BA1" BorderBrush="#ccc" BorderThickness="0,1,1,0" >
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Name="UpGrid" Visibility="Visible" Height="auto" Grid.Row="0" Width="auto" Margin="0,-2,0,2">

            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="257*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions >
            <Image Margin="-1438,-250,0,-250" Stretch="Fill" Source="/PL;component/backGroundMain.jpg" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,10,0,0" VerticalAlignment="Top" Width="350">
                <Label Content="תז" FontWeight="Normal" HorizontalAlignment="Left" Height="29" Margin="363,24,0,0" VerticalAlignment="Top" Width="82" FontFamily="Heebo" FontSize="16"/>
            </Grid>

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,67,0,0" VerticalAlignment="Top" Width="350" Grid.RowSpan="2">
                <Label Content="מודל" FontWeight="Bold" HorizontalAlignment="Left" Height="29" Margin="17,5,0,0" VerticalAlignment="Top" Width="82"/>
                <TextBox x:Name="TextBoxModel" HorizontalAlignment="Left" Margin="189,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBoxModel_TextChanged"/>

            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,54,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="170*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="99*"/>
                </Grid.ColumnDefinitions>
                <Label Content="משקל" FontWeight="Bold" HorizontalAlignment="Left" Height="29" Margin="18,0,0,0" VerticalAlignment="Center" Width="82" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="WeightSelector" HorizontalAlignment="Left" Margin="162,33,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Grid.ColumnSpan="5" Grid.Column="1" Height="227"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,111,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <ComboBox x:Name="idStation" HorizontalAlignment="Left" 
                      Margin="192,56,0,-21"
                      Width="120"
                      SelectionChanged="idStation_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,182,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1"/>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,225,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="77" Margin="0,282,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="143*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>

                <Label Content="ID first charging:" FontWeight="Bold" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="167" Margin="17,-160,0,0"/>
                <Button x:Name="addDrone" Content="Add" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Margin="57,-76,0,0" VerticalAlignment="Top" Height="40" Width="90" Click="addDrone_Click" 
                    IsEnabled="False"
                    />
                <Button x:Name="cancelAddDrone" Content="Cancel" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Margin="211,-76,0,0" VerticalAlignment="Top" Height="40" Width="90" Click="cancelAddDrone_Click"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,344,0,0" VerticalAlignment="Top" Width="450" Grid.Row="1"/>
            <TextBox x:Name="TextBoxId"  Grid.Column="1" HorizontalAlignment="Left" Margin="65,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        </Grid>

        <Grid Name="updataGrid" Visibility="Hidden" Height="auto" Grid.Row="0" Width="auto" Margin="0,-1,0,1">

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="95"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="95"/>
            </Grid.ColumnDefinitions >
            <Image Grid.ColumnSpan="4" Margin="-647,-30,0,-30" Grid.RowSpan="10" Stretch="Fill" Source="/PL;component/backGroundMain.jpg"/>

            <Button Style="{DynamicResource roundButton}" x:Name="CloseWindow" Content="סגור חלון" HorizontalAlignment="Left" Margin="33,25,0,0" Grid.Row="8" VerticalAlignment="Top" Click="CloseWindow_Click" Width="81" Height="26" Grid.RowSpan="2" FontFamily="Heebo" FontSize="16"  Foreground="#FF185BA1" FontWeight="Bold"/>
            <Button  Style="{DynamicResource roundButton}" x:Name="UpdateData"  Content="עדכן"    Foreground="#FF185BA1" IsEnabled="True" Margin="134,25,32,0" Grid.Row="8" VerticalAlignment="Top" Click="UpdateData_Click" Grid.ColumnSpan="2" Grid.RowSpan="2" FontFamily="Heebo" FontSize="16" Background="{Binding Effect.HasAnimatedProperties, ElementName=UpdateData, Mode=OneWay}" FontWeight="Bold"/>
            <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="SendingDroneForCharging" Content="שלח לטעינה" HorizontalAlignment="Left" Margin="36,22,0,0"  Grid.Row="4" VerticalAlignment="Top" Click="SendingDroneForCharging_Click" Grid.ColumnSpan="2" Width="81" Height="26"/>
            <Button Style="{DynamicResource roundButtonUpdate}" x:Name="ReleaseDroneFromCharging" Visibility="{Binding ElementName=SendingDroneForCharging, Path=Visibility,Mode=TwoWay}" Content="שחרר מטעינה" HorizontalAlignment="Center" Margin="0,22,0,0" Grid.Row="4" VerticalAlignment="Top" Width="81" Height="26" Click="ReleaseDroneFromCharging_Click" Foreground="White"/>
            <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="assignDroneToParcel" Width="81" Height="26" Margin="36,21,41,0" Grid.Row="5" VerticalAlignment="Top" Click="AssignDroneToParcel_Click">
                <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="pickUpParcel" Content="אסוף חבילה" HorizontalAlignment="Left" VerticalAlignment="Top" Click="PickUpParcel_Click" Width="78" Height="24"/>
            </Button>
            <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="ParcelArriveToCustomer" Content="משלוח בוצע" HorizontalAlignment="Left" Margin="33,12,0,0"  Grid.Row="5" VerticalAlignment="Top" Click="ParcelArriveToCustomer_Click" Width="85" FontFamily="Heebo" FontSize="16" Height="33" Foreground="White"/>
            <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="OpenParcelWindow" Content="פתח חבילה" HorizontalAlignment="Left" Margin="33,19,0,0"  Grid.Row="6" VerticalAlignment="Top" Width="81" Height="26" Click="OpenParcelWindow_Click" FontFamily="Heebo" FontSize="16" Foreground="White"/>

            <Label Content="מספר מזהה"  FontWeight="Normal" Grid.Column="2" Margin="87,14,6,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.712,0.517" Grid.ColumnSpan="2" FontFamily="Heebo" FontSize="16"/>
            <TextBox x:Name="id" Text="{Binding Path = Id}" IsEnabled="False"  Height="28" Width="157" Grid.Column="1" Margin="20,17,73,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <TextBox.Background>
                    <SolidColorBrush Color="White" Opacity="1"/>
                </TextBox.Background>
                <TextBox.BorderBrush>
                    <SolidColorBrush Color="#FFC1C5D1" Opacity="0"/>
                </TextBox.BorderBrush>
            </TextBox>

            <Label Content="מודל" FontWeight="Normal" Grid.Column="2" HorizontalAlignment="Left" Margin="91,14,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Heebo" FontSize="16" Grid.RowSpan="2" />
            <TextBox x:Name="Model" Text="{Binding Model}" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" BorderBrush="#FF02040C" Grid.ColumnSpan="2" Margin="21,17,0,0" Height="28">
                <TextBox.Background>
                    <SolidColorBrush Color="White" Opacity="0.9"/>
                </TextBox.Background>
            </TextBox>

            <Label Content="משקל מירבי" FontWeight="Normal" HorizontalAlignment="Left" Margin="87,12,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="2" FontFamily="Heebo" FontSize="16"/>
            <TextBox x:Name="MaxWeight" Text="{Binding MaxWeight}" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="21,12,0,0" Grid.Row="3"  TextWrapping="Wrap" VerticalAlignment="Top" Width="157" Grid.ColumnSpan="2" Height="28"/>


            <Label Content="בטריה" FontWeight="Normal" Grid.Column="2" HorizontalAlignment="Left" Margin="88,15,0,40" Grid.Row="4" FontFamily="Heebo" FontSize="16" Grid.RowSpan="2"/>
            <ProgressBar x:Name="BatteryProgressBar" HorizontalAlignment="Left" Height="28" Grid.Row="4" VerticalAlignment="Top" Width="157" Grid.Column="1" Margin="21,15,0,0" Background="#FFF3F0F0"  Grid.ColumnSpan="2">
                <ProgressBar.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF04E70F" Offset="0.631"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
            <TextBlock x:Name="PrecentsBattery"  Grid.Column="1" HorizontalAlignment="Left" Margin="71,24,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="72"/>

            <Label Content="סטטוס" FontWeight="Normal" Grid.Column="2" HorizontalAlignment="Left" Margin="90,11,0,0" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="0.677,2.339" FontSize="16" FontFamily="Heebo" Height="29"/>
            <TextBox x:Name="Status" Text="{Binding Status}"  IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="21,12,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" Grid.ColumnSpan="2" Height="28"/>

            <Label Content="מס' חבילה" FontWeight="Normal" Grid.Column="2" HorizontalAlignment="Left" Margin="90,0,0,0" Grid.Row="6" VerticalAlignment="Center" FontFamily="Heebo" FontSize="16" Grid.ColumnSpan="2"/>
            <TextBox x:Name="idParcel" IsReadOnly="True"  Text="{Binding idParcel, Mode=OneWay}" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="21,0,0,0" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Center" Width="157" RenderTransformOrigin="0.544,0.649" Grid.ColumnSpan="2" Height="28"/>

            <Label Content="מיקום נוכחי" FontWeight="Normal" HorizontalAlignment="Left" Margin="90,0,0,0" Grid.Row="7" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2" Grid.Column="2" FontSize="16" FontFamily="Heebo"/>
            <TextBox x:Name="LocationTextBox" Text="{Binding CurrentLocation, Mode=OneWay}" IsEnabled="false" HorizontalAlignment="Right" Margin="0,0,71,11" Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="157" Height="28" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Button  Style="{DynamicResource roundButtonUpdate}" x:Name="Automatic" Content="אוטומטי" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Margin="33,22,0,0" Click="Automatic_Click" Width="78" Grid.Row="7" FontFamily="Heebo" FontSize="16" Foreground="White"/>
            <Button x:Name="Regular" Visibility="Hidden" Content="עצור" Grid.Column="2" HorizontalAlignment="Left" Margin="45,48,0,0" Grid.Row="6" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="55" Height="21" Grid.RowSpan="2" Click="Manual_Click"/>









        </Grid>

    </Grid>

</Window>