<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="380"
        WindowStyle="None" MouseDown="moveWindow">
    <Grid>
        <Grid Name="UpGrid" Visibility="Hidden" Height="auto" Grid.Row="0" Width="auto" Margin="0,-2,0,2">

            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="257*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions >

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,10,0,0" VerticalAlignment="Top" Width="350">
                <Label Content="ID:" FontWeight="Bold" HorizontalAlignment="Left" Height="29" Margin="20,10,0,0" VerticalAlignment="Top" Width="82"/>
            </Grid>

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,67,0,0" VerticalAlignment="Top" Width="350" Grid.RowSpan="2">
                <Label Content="Model:" FontWeight="Bold" HorizontalAlignment="Left" Height="29" Margin="17,5,0,0" VerticalAlignment="Top" Width="82"/>
                <TextBox x:Name="TextBoxModel" HorizontalAlignment="Left" Margin="189,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBoxModel_TextChanged"/>

            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,54,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="170*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="99*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Weight:" FontWeight="Bold" HorizontalAlignment="Left" Height="29" Margin="18,0,0,0" VerticalAlignment="Center" Width="82" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="WeightSelector" HorizontalAlignment="Left" Margin="156,16,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Grid.ColumnSpan="5" Grid.Column="1"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,111,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <ComboBox x:Name="idStation" HorizontalAlignment="Left" 
                      Margin="190,15,0,20"
                      Width="120"
                      SelectionChanged="idStation_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,182,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1"/>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,225,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="77" Margin="0,282,0,0" VerticalAlignment="Top" Width="350" Grid.Row="1">
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="143*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>

                <Label Content="ID first charging:" FontWeight="Bold" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="167" Margin="17,-160,0,0"/>
                <Button x:Name="addDrone" Content="Add" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Margin="57,-76,0,0" VerticalAlignment="Top" Height="40" Width="90" Click="addDrone_Click" 
                    IsEnabled="False"
                    />
                <Button x:Name="cancelAddDrone" Content="Cancel" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Margin="211,-76,0,0" VerticalAlignment="Top" Height="40" Width="90" Click="cancelAddDrone_Click"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="57" Margin="0,344,0,0" VerticalAlignment="Top" Width="450" Grid.Row="1"/>
            <TextBox x:Name="TextBoxId"  Grid.Column="1" HorizontalAlignment="Left" Margin="65,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        </Grid>

        <Grid Name="updataGrid" Visibility="Visible" Height="auto" Grid.Row="0" Width="auto" Margin="0,-2,0,2">

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="95"/>
            </Grid.ColumnDefinitions >

            <Button x:Name="CloseWindow" Content="סגור חלון" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="8" VerticalAlignment="Top" Click="CloseWindow_Click" Width="81" Grid.Column="1"/>
            <Button x:Name="UpdateData"  Content="עדכן מודל"   IsEnabled="True" Margin="34,0,76,0" Grid.Row="2" VerticalAlignment="Center" Click="UpdateData_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="SendingDroneForCharging" Content="שלח רחפן לטעינה" HorizontalAlignment="Left" Margin="12,22,0,0"  Grid.Row="4" VerticalAlignment="Top" Click="SendingDroneForCharging_Click" Grid.ColumnSpan="2" Width="115"/>
            <Button x:Name="ReleaseDroneFromCharging" Visibility="{Binding ElementName=SendingDroneForCharging, Path=Visibility,Mode=TwoWay}" Content="שחרר רחפן מטעינה" HorizontalAlignment="Left" Margin="12,22,0,0" Grid.Row="4" VerticalAlignment="Top" Width="115" Click="ReleaseDroneFromCharging_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="assignDroneToParcel" Content="שיוך רחפן למשלוח " Grid.Column="2" Margin="15,27,60,0" Grid.Row="8" VerticalAlignment="Top" Click="AssignDroneToParcel_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="pickUpParcel" Content="אסוף משלוח" Grid.Column="2" HorizontalAlignment="Left" Margin="16,27,0,0" Grid.Row="8" VerticalAlignment="Top" Click="PickUpParcel_Click" Width="114" Grid.ColumnSpan="2"/>
            <Button x:Name="ParcelArriveToCustomer" Content="משלוח בוצע" Grid.Column="2" HorizontalAlignment="Left" Margin="14,27,0,0"  Grid.Row="8" VerticalAlignment="Top" Click="ParcelArriveToCustomer_Click" Width="118" Grid.ColumnSpan="2"/>
            <Button x:Name="OpenParcelWindow" Content="פתח חבילה" HorizontalAlignment="Left" Margin="35,19,0,0"  Grid.Row="6" VerticalAlignment="Top" Width="85" Height="20" Click="OpenParcelWindow_Click" Grid.ColumnSpan="2"/>

            <Label Content="מספר מזהה"  FontWeight="Bold" Grid.Column="2" Margin="75,14,38,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.712,0.517" Grid.ColumnSpan="2"/>
            <TextBox x:Name="id"  IsEnabled="False"  Grid.Column="1" Margin="44,19,32,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

            <Label Content="מודל" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="87,0,0,0" Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Model" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="115" BorderBrush="#FF02040C" Grid.ColumnSpan="2" Margin="44,0,0,0" Height="20"/>

            <Label Content="משקל מירבי" FontWeight="Bold" HorizontalAlignment="Left" Margin="85,18,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="2"/>
            <TextBox x:Name="MaxWeight" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="43,18,0,0" Grid.Row="3" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" Grid.ColumnSpan="2" Height="22"/>


            <Label Content="בטריה" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="90,23,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <ProgressBar x:Name="BatteryProgressBar" HorizontalAlignment="Left" Height="18" Grid.Row="4" VerticalAlignment="Top" Width="117" Grid.Column="1" Margin="43,23,0,0" Background="#FFF3F0F0"  Grid.ColumnSpan="2">
                <ProgressBar.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF04E70F" Offset="0.631"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
            <TextBlock x:Name="PrecentsBattery"  Grid.Column="1" HorizontalAlignment="Left" Margin="71,24,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="72"/>

            <Label Content="סטטוס" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="90,21,0,0" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="0.677,2.339" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Status" Text="{Binding Status}"  IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="44,26,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Grid.ColumnSpan="2"/>

            <Label Content="מס' חבילה" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="82,0,0,0" Grid.Row="6" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <TextBox x:Name="idParcel" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="44,21,0,0" Grid.Row="6" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.544,0.649" Grid.ColumnSpan="2"/>

            <Label Content="מיקום נוכחי" FontWeight="Bold" HorizontalAlignment="Left" Margin="90,0,0,0" Grid.Row="7" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2" Grid.Column="2"/>
            <TextBox x:Name="LocationTextBox" IsEnabled="false" HorizontalAlignment="Right" Margin="0,0,30,26" Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="177" Height="18" Grid.ColumnSpan="3"/>
            <Button x:Name="Automatic" Content="אוטומטי" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" Margin="36,0,0,0" Click="Automatic_Click" Width="58" Grid.Row="1"/>
            <Button x:Name="Regular" Visibility="Hidden" Content="עצור" Grid.Column="2" HorizontalAlignment="Left" Margin="45,48,0,0" Grid.Row="6" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="55" Height="21" Grid.RowSpan="2" Click="Manual_Click"/>









        </Grid>

    </Grid>

</Window>